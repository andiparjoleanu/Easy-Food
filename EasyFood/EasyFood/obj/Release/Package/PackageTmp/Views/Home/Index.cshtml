@{
    ViewBag.Title = "Home Page";
}

<link href="http://easyfoodro.azurewebsites.net/Styles/EasyFood.css" rel="stylesheet" />

<div class="container-fluid " style="width:100%;  margin:0px; padding:0px">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="width:100% ;  !important">
            <div class="item active containerImaginePrezentare" style="background-image:url('http://easyfoodro.azurewebsites.net/Fisiere/carouselHome1.jpg')">
                <div class="carousel-caption d-none d-md-block mb-5">
                    <h3 class="lead">Descoperă ce ți-a pregătit chef Lorenzo.</h3>
                    @Html.ActionLink("Vezi oferta", "Index", "Reteta", new { }, new { @class = "btn btn-success" })
                    <br />
                    <br />
                </div>
            </div>

            <div class="item containerImaginePrezentare" style="background-image:url('http://easyfoodro.azurewebsites.net/Fisiere/somon-la-gratar.JPG')">
                <div class="carousel-caption d-none d-md-block mb-5">
                    <h3 class="lead">Somon la grătar cu legume gratinate</h3>
                    @Html.ActionLink("Detalii", "Details/2", "Reteta", new { }, new { @class = "btn btn-warning" })
                    <br />
                    <br />
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>